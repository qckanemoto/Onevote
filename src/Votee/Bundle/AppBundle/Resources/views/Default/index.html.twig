{% extends 'VoteeAppBundle::layout.html.twig' %}

{% block content %}

    <div class="col-lg-offset-2 col-lg-8">
        <h3><i class="fa fa-pencil-square-o"></i> 投票ボードを作成する</h3>

        <form id="create-board-form" class="form-horizontal">
            <div class="form-group required">
                <label class="col-sm-2 control-label">ボード名</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="name" required autofocus/>
                </div>
            </div>

            <div class="form-group required">
                <label class="col-sm-2 control-label">選択肢</label>
                <div class="col-sm-10 input-block-list">
                    <div class="input-group">
                        <input class="form-control" type="text" name="choices[][name]" required/>
                        <span class="input-group-btn">
                            <span class="btn btn-danger btn-remove"><i class="fa fa-minus"></i></span>
                        </span>
                    </div>

                    <div class="input-group">
                        <input class="form-control" type="text" name="choices[][name]" required/>
                        <span class="input-group-btn">
                            <span class="btn btn-danger btn-remove"><i class="fa fa-minus"></i></span>
                        </span>
                    </div>

                    <span class="btn btn-default btn-block btn-add" data-prototype="#choice-prototype"><i class="fa fa-plus"></i></span>

                    <div id="choice-prototype">
                        {% filter escape %}
                        <div class="input-group">
                            <input class="form-control" type="text" name="choices[][name]" required/>
                            <span class="input-group-btn">
                                <span class="btn btn-danger btn-remove"><i class="fa fa-minus"></i></span>
                            </span>
                        </div>
                        {% endfilter %}
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">投票者</label>
                <div class="col-sm-10 input-block-list">
                    <span class="btn btn-default btn-block btn-add" data-prototype="#voter-prototype"><i class="fa fa-plus"></i></span>

                    <div id="voter-prototype">
                        {% filter escape %}
                        <div class="input-group">
                            <input class="form-control" type="text" name="voters[]" required/>
                            <span class="input-group-btn">
                                <span class="btn btn-danger btn-remove"><i class="fa fa-minus"></i></span>
                            </span>
                        </div>
                        {% endfilter %}
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">備考</label>
                <div class="col-sm-10">
                    <textarea class="form-control" rows="5" name="note"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary btn-lg btn-block" type="submit"><i class="fa fa-check"></i> この内容で作成する</button>
                </div>
            </div>
        </form>
    </div>

    {% include 'VoteeAppBundle::spinner-modal.html.twig' %}

{% endblock %}

{% block foot_script_assetic %}
    {% javascripts
    '//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/dist/js/bootstrap.js'
    '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-collection.js'
    '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-subnav.js'
    'https://raw.githubusercontent.com/marioizquierdo/jquery.serializeJSON/master/jquery.serializejson.min.js'
    '@VoteeAppBundle/Resources/public/js/Default/index.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { 'callback': 'fos.Router.setData' }) }}"></script>
    {% endjavascripts %}
{% endblock %}
